@model IEnumerable<QLTDL22.Models.tbKHACH>

@{
    ViewBag.Title = "ShowList";
    Layout = "~/Views/Share/_LayoutUSE.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="stylesheet" href="~/Content/TW2.css">
    <style>
        .fm{
            margin:0px 50px 0px 50px;
        }
    </style>
</head>
<h2 class="title">Danh sách khách hàng</h2>

<form method="get" class="fm">
    <div class="form-group">
        <input type="text" class="form-control" name="filter" placeholder="Nhập tên hoặc mã khách hàng để tìm" value="@ViewBag.Filter">
        <button type="submit" class="btn btn-default">Tìm</button>
    </div>
</form>

<table class="table">
    <tr>
        <th>Mã khách</th>
        <th>Tên khách</th>
        <th>Số điện thoại</th>
        <th>@Html.ActionLink("Thêm mới", "Create", "", new { @class = "btn1" })</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaKhach)</td>
            <td>@Html.DisplayFor(modelItem => item.TenKhachHang)</td>
            <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>        
            <td class="td-btn">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaKhach }, new { @class = "btn1" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaKhach }, new { @class = "btn1" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaKhach }, new { @class = "btn1" })
            </td>
        </tr>
    }
</table>
