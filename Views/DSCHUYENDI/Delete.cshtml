@model QLTDL22.Models.tbCHUYENDI

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Share/_LayoutUSE.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="stylesheet" href="~/Content/TW2.css">
</head>
<h2 class="title">Bạn chắc chắn muốn xóa?</h2>
<br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="txt">Mã chuyến</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaChuyen, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } } )
                @Html.ValidationMessageFor(model => model.MaChuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Mã tuyến</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTuyen, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaTuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Ngày khởi hành</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayKhoiHanh, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", type = "date", @Value = Model.NgayKhoiHanh.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.NgayKhoiHanh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Ngày kết thúc</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", type = "date", @Value = Model.NgayKetThuc.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Mã loại phòng</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLoaiPhong, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaLoaiPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Mã phương tiện</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaPhuongTien, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaPhuongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Tổng tiền</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa" class="btn" />
                @Html.ActionLink("Trở về", "ShowList", "", new { @class = "btn" })
            </div>
        </div>
    </div>
}
