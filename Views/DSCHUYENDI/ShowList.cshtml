@model IEnumerable<QLTDL22.Models.tbCHUYENDI>

@{
    ViewBag.Title = "ShowList";
    Layout = "~/Views/Share/_LayoutUSE.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="stylesheet" href="~/Content/TW2.css">
</head>
<h2 class="title">Danh sách chuyến đi</h2>

<table class="table">
    <tr >
        <th>Mã chuyến</th>
        <th >Tên tuyến</th>
        <th >Ngày khởi hành</th>
        <th >Ngày kết thúc</th>
        <th >@Html.ActionLink("Thêm mới", "Create" ,"", new { @class = "btn1" })</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaChuyen)</td>
            <td>@Html.DisplayFor(modelItem => item.MaTuyen)</td>
            <td>@String.Format("{0:dd-MM-yyyy}",item.NgayKhoiHanh)</td>
            <td>@String.Format("{0:dd-MM-yyyy}",item.NgayKetThuc)</td>
            <td class="td-btn">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaChuyen }, new { @class = "btn1" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaChuyen }, new { @class = "btn1" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaChuyen }, new { @class = "btn1" })
            </td>
        </tr>
    }

</table>
