@model QLTDL22.Models.tbPHONG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Share/_LayoutUSE.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="stylesheet" href="~/Content/TW2.css">
</head>
<h2 class="title">Bạn chắc chắn muốn xóa?</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="txt">Mã loại phòng</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLoaiPhong, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaLoaiPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Khách sạn</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KhachSan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.KhachSan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Giá 1 ngày</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gia1Ngay, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Gia1Ngay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Các trang bị cho phòng</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CacTrangBiChoPhong, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.CacTrangBiChoPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa" class="btn" />
                @Html.ActionLink("Back to List", "ShowList", "", new { @class = "btn" })
            </div>
        </div>
    </div>
}

