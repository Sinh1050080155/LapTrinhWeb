@model QLTDL22.Models.tbTUYENDULICH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Share/_LayoutUSE.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="stylesheet" href="~/Content/TW2.css">
</head>
<h2 class="title">Bạn chắc chắn muốn xóa?</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="txt">Mã tuyến </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTuyen, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaTuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Tên tuyến</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTuyen, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TenTuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Số ngày</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoNgay, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.SoNgay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa" class="btn" />
                @Html.ActionLink("Back to List", "ShowList", "", new { @class = "btn" })
            </div>
        </div>
    </div>
}

