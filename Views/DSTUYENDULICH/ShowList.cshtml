@model IEnumerable<QLTDL22.Models.tbTUYENDULICH>

@{
    ViewBag.Title = "ShowList";
    Layout = "~/Views/Share/_LayoutUSE.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="stylesheet" href="~/Content/TW2.css">
</head>
<h2 class="title">Danh sách tuyến du lịch</h2>
<table class="table">
    <tr>
        <th>Mã tuyến</th>
        <th>Tên tuyến</th>
        <th>Số ngày</th>
        <th>
            @Html.ActionLink("Thêm mới", "Create", "", new { @class = "btn1" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTuyen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTuyen)
            </td>
            <td>
                @String.Format("{0: dd-MM-yyyy}", item.SoNgay)
            </td>
            <td class="td-btn">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaTuyen }, new { @class = "btn1" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTuyen }, new { @class = "btn1" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTuyen }, new { @class = "btn1" })
            </td>
        </tr>
    }

</table>
