@model QLTDL22.Models.tbPHUONGTIENDICHUYEN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Share/_LayoutUSE.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="stylesheet" href="~/Content/TW2.css">
</head>
<h2 class="title">Bạn chắc chắn muốn xóa?</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

