            <p class="txt">Mã phương tiện</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaPhuongTien, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaPhuongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Tên phương tiện</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPhuongTien, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TenPhuongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Giá tiền 1 đơn vị</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTien1DonVi, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.GiaTien1DonVi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="txt">Ghi chú</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa" class="btn" />
                @Html.ActionLink("Back to List", "ShowList", "", new { @class = "btn" })
            </div>
        </div>
    </div>
}
