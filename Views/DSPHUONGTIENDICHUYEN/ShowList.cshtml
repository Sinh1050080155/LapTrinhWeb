@model IEnumerable<QLTDL22.Models.tbPHUONGTIENDICHUYEN>

@{
    ViewBag.Title = "ShowList";
    Layout = "~/Views/Share/_LayoutUSE.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="stylesheet" href="~/Content/TW2.css">
</head>
<h2 class="title">Danh sách phương tiện</h2>
<table class="table">
    <tr>
        <th>Mã phương tiện</th>
        <th>Tên phương tiện</th>
        <th>Giá tiền 1 đơn vị</th>
        <th>Ghi chú</th>
        <th>
            @Html.ActionLink("Thêm mới", "Create", "", new { @class = "btn1" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaPhuongTien)</td>
            <td>@Html.DisplayFor(modelItem => item.TenPhuongTien)</td>
            <td>@Html.DisplayFor(modelItem => item.GiaTien1DonVi)</td>
            <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
            <td class="td-btn">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaPhuongTien }, new { @class = "btn1" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaPhuongTien }, new { @class = "btn1" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaPhuongTien }, new { @class = "btn1" })
            </td>
        </tr>
    }
</table>
